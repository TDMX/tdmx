<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:cxf="http://cxf.apache.org/core"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd">
	



	<bean id="ws.Configuration" class="org.tdmx.server.runtime.WebServerRuntimeContextService" init-method="init">
		<property name="httpsPort" value="${container.httpsPort}" />
		<property name="serverAddress" value="${container.serverAddress}" />
		<property name="httpsCiphers" value="${container.httpsCipherList}"/>
		<property name="httpsProtocols" value="${container.httpsProtocols}"/>
		<property name="renegotiationAllowed" value="${container.tlsRenegotiationAllowed}"/>
		<property name="stopAddress" value="${container.stopAddress}" />
		<property name="stopPort" value="${container.stopPort}" />
		<property name="stopCommand" value="${container.stopCommand}" />
		<property name="keyStoreFile" value="${ws.generated.keyStoreFile}"/>
		<property name="keyStorePassword" value="${ws.generated.keyStorePassword}"/>
		<property name="connectionIdleTimeoutSec" value="${container.connectionIdleTimeoutSec}"/>
 	</bean>

	<bean id="ws.authenticatedClientService" class="org.tdmx.server.ws.security.service.AuthenticatedClientServiceImpl">
	</bean>
	
	<bean id="ws.authorizationFilter" class="org.tdmx.server.ws.security.ClientAuthenticationFilter">
		<property name="authenticatedClientService" ref="ws.AuthenticatedClientService" />
	</bean>
	
	<bean id="ws.ServerSessionManager" class="org.tdmx.server.session.ServerSessionManagerImpl">
		<property name="timeoutCheckIntervalSec" value="60"/>
	</bean>

	<bean id="ws.Server" class="org.tdmx.server.runtime.WebServiceServerContainer">
		<property name="runtimeContext" ref="ws.Configuration"/>
		
		<property name="agentAuthorizationFilter" ref="ws.authorizationFilter"/>
		
		<property name="trustProvider">
			<bean class="org.tdmx.server.ws.session.TrustManagerProviderImpl">
				<property name="serverSessionTrustManagers">
					<list value-type="org.tdmx.server.ws.session.WebServiceSessionTrustManager">
			            <ref bean="ws.ZAS.ServerSessionManager"/>
			            <ref bean="ws.MOS.ServerSessionManager"/>
			            <ref bean="ws.MDS.ServerSessionManager"/>
			            <ref bean="ws.MRS.ServerSessionManager"/>
			        </list>
		        </property>
			</bean>
		</property>
		<property name="manageables">
			<list value-type="org.tdmx.server.runtime.Manageable">
	            <ref bean="tdmx.lib.control.job.JobExecutor"/>
	            <ref bean="ws.ServerSessionManager"/>
	        </list>
        </property>
		
	</bean>

</beans>
