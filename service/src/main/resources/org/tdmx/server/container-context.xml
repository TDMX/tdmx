<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/tx 
       http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
       http://www.springframework.org/schema/aop 
       http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">
 
 	<bean id="sslInfo" class="org.tdmx.server.runtime.SslServerSocketInfo" init-method="init">
		<property name="sslTestPort" value="${container.httpsPort}" />
 	</bean>

	<bean id="serverContainer" class="org.tdmx.server.runtime.ServerContainer">
		<property name="httpsPort" value="${container.httpsPort}" />
		<property name="httpsCiphers" value="${container.httpsCipherList}"/>
		<property name="httpsProtocols" value="${container.httpsProtocols}"/>
		<property name="keyStoreFile" value="${container.keyStoreFile}"/>
		<property name="keyStorePassword" value="${container.keyStorePassword}"/>
		<property name="connectionIdleTimeoutSec" value="${container.connectionIdleTimeoutSec}"/>
		
		<property name="stopPort" value="${container.stopPort}" />
		<property name="stopCommand" value="${container.stopCommand}" />

		<property name="userAuthenticationFilter" ref="userAuthenticationFilter"/>
	</bean>

	<bean id="userAuthenticationFilter" class="org.tdmx.server.ws.security.AgentAuthenticationFilter">
	</bean>
	
	
</beans>