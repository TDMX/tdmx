<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/tx 
       http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
       http://www.springframework.org/schema/aop 
       http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">
 
 	<bean id="server.sslInfo" class="org.tdmx.server.runtime.SslServerSocketInfo" init-method="init">
		<property name="sslTestPort" value="${container.httpsPort}" />
 	</bean>

	<bean id="server.authenticatedClientService" class="org.tdmx.server.ws.security.service.AuthenticatedClientServiceImpl">
	</bean>
	
	<bean id="server.authorizationFilter" class="org.tdmx.server.ws.security.ClientAuthenticationFilter">
		<property name="authenticatedClientService" ref="server.AuthenticatedClientService" />
	</bean>
	
	<bean id="server.Container" class="org.tdmx.server.runtime.ServerContainer">
		<property name="serverAddress" value="${container.serverAddress}" />
		<property name="httpsPort" value="${container.httpsPort}" />
		<property name="httpsCiphers" value="${container.httpsCipherList}"/>
		<property name="httpsProtocols" value="${container.httpsProtocols}"/>
		<property name="renegotiationAllowed" value="${container.tlsRenegotiationAllowed}"/>
		<property name="keyStoreFile" value="${container.keyStoreFile}"/>
		<property name="keyStorePassword" value="${container.keyStorePassword}"/>
		<property name="connectionIdleTimeoutSec" value="${container.connectionIdleTimeoutSec}"/>
		
		<property name="stopAddress" value="${container.stopAddress}" />
		<property name="stopPort" value="${container.stopPort}" />
		<property name="stopCommand" value="${container.stopCommand}" />

		<property name="agentAuthorizationFilter" ref="server.authorizationFilter"/>
		
		<property name="trustProvider">
			<bean class="org.tdmx.server.session.TrustManagerProviderImpl">
				<property name="serverSessionTrustManagers">
					<list value-type="org.tdmx.server.session.ServerSessionTrustManager">
			            <ref bean="ws.ZAS.ServerSessionManager"/>
			            <ref bean="ws.MOS.ServerSessionManager"/>
			            <ref bean="ws.MDS.ServerSessionManager"/>
			            <ref bean="ws.MRS.ServerSessionManager"/>
			        </list>
		        </property>
			</bean>
		</property>
		<property name="manageables">
			<list value-type="org.tdmx.lib.control.job.Manageable">
	            <ref bean="tdmx.lib.control.job.JobExecutor"/>
	        </list>
        </property>
		
	</bean>

	
	
</beans>