<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/tx 
       http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd
       http://www.springframework.org/schema/aop 
       http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<!-- JOBS -->
	
	<bean id="tdmx.lib.control.task.ZoneInstallJobConverter"
		class="org.tdmx.lib.control.job.ZoneInstallJobConverterImpl">
	</bean>
	<bean id="tdmx.lib.control.task.ZoneInstallJobExecutor"
		class="org.tdmx.lib.control.job.ZoneInstallJobExecutorImpl">
		<property name="accountZoneService" ref="tdmx.lib.control.AccountZoneRepository"/>
		<property name="zonePartitionIdProvider" ref="tdmx.lib.zone.ThreadLocalPartitionIdProvider"/>
		<property name="zoneService" ref="tdmx.lib.zone.ZoneRepository"/>
	</bean>

	<bean id="tdmx.lib.control.task.ZoneTransferJobConverter"
		class="org.tdmx.lib.control.job.ZoneTransferJobConverterImpl">
	</bean>
	<bean id="tdmx.lib.control.task.ZoneTransferJobExecutor"
		class="org.tdmx.lib.control.job.ZoneTransferJobExecutorImpl">
		
		<property name="accountZoneService" ref="tdmx.lib.control.AccountZoneRepository"/>
		<property name="zonePartitionIdProvider" ref="tdmx.lib.zone.ThreadLocalPartitionIdProvider"/>
		<property name="zoneService" ref="tdmx.lib.zone.ZoneRepository"/>
		<property name="domainService" ref="tdmx.lib.zone.DomainRepository"/>
		<property name="serviceService" ref="tdmx.lib.zone.ServiceRepository"/>
		<property name="addressService" ref="tdmx.lib.zone.AddressRepository"/>
		<property name="agentCredentialService" ref="tdmx.lib.zone.AgentCredentialRepository"/>
		<property name="channelAuthorizationService" ref="tdmx.lib.zone.ChannelAuthorizationRepository"/>

		<property name="batchSize" value="1000"/>
		
	</bean>

	<bean id="tdmx.lib.control.task.ZACInstallJobConverter"
		class="org.tdmx.lib.control.job.ZACInstallJobConverterImpl">
	</bean>
	<bean id="tdmx.lib.control.task.ZACInstallJobExecutor"
		class="org.tdmx.lib.control.job.ZACInstallJobExecutorImpl">
		<property name="accountZoneService" ref="tdmx.lib.control.AccountZoneRepository"/>
		<property name="accountZoneAdministrationCredentialService" ref="tdmx.lib.control.AccountZoneAdministrationCredentialRepository"/>
		<property name="zonePartitionIdProvider" ref="tdmx.lib.zone.ThreadLocalPartitionIdProvider"/>
		<property name="zoneService" ref="tdmx.lib.zone.ZoneRepository"/>
		<property name="agentCredentialService" ref="tdmx.lib.zone.AgentCredentialRepository"/>

	</bean>

	<!-- JOB EXECUTOR AND SCHEDULER -->
	<bean id="tdmx.lib.control.job.JobExceptionConverter"
		class="org.tdmx.lib.control.job.JobExceptionConverterImpl">
	</bean>
	
	<bean id="tdmx.lib.control.job.JobScheduler"
		class="org.tdmx.lib.control.job.JobSchedulerImpl">
		<property name="controlJobService" ref="tdmx.lib.control.ControlJobRepository"/>
	</bean>
	
	<bean id="tdmx.lib.control.job.JobExecutor"
		class="org.tdmx.lib.control.job.JobExecutionProcessImpl" init-method="init">
		<property name="jobIdService" ref="tdmx.lib.control.JobIdService"/>
		<property name="jobService" ref="tdmx.lib.control.ControlJobRepository"/>
		<property name="jobConverterList">
			<list value-type="org.tdmx.lib.control.job.JobConverter">
	            <ref bean="tdmx.lib.control.task.ZoneInstallJobConverter"/>
	            <ref bean="tdmx.lib.control.task.ZACInstallJobConverter"/>
	            <ref bean="tdmx.lib.control.task.ZoneTransferJobConverter"/>
	        </list>
        </property>
		<property name="jobExecutorList">
			<list value-type="org.tdmx.lib.control.job.JobExecutor">
	            <ref bean="tdmx.lib.control.task.ZoneInstallJobExecutor"/>
	            <ref bean="tdmx.lib.control.task.ZACInstallJobExecutor"/>
	            <ref bean="tdmx.lib.control.task.ZoneTransferJobExecutor"/>
	        </list>
        </property>
        <property name="exceptionConverter" ref="tdmx.lib.control.job.JobExceptionConverter" />
        <property name="longPollIntervalSec" value="10"/>
        <property name="maxConcurrentJobs" value="5"/>
        <property name="fastTriggerDelayMillis" value="100"/>
	</bean>

</beans>